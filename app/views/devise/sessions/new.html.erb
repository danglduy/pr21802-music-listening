<div class="container">

  <div class="row">
    <div class="col s12 m12 l4 center">
      <div class="card-panel">
        <div class="row s12">
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn red darken-1' do %>
            <i class="fa fa-google-plus"></i>&nbsp; &nbsp; <%= t ".log_in_with_google" %>
          <% end %>
        </div>
        <div class="row s12">
          <%= link_to user_facebook_omniauth_authorize_path, class: 'btn blue darken-4' do %>
            <i class="fa fa-facebook"></i>&nbsp; &nbsp; <%= t ".log_in_with_facebook" %>
          <% end %>
        </div>

        <div class="row s12">
          <%= link_to user_twitter_omniauth_authorize_path, class: 'btn cyan darken-1' do %>
            <i class="fa fa-twitter"></i>&nbsp; &nbsp; <%= t ".log_in_with_twitter" %> &nbsp; &nbsp;
          <% end %>
        </div>
      </div>
    </div>

    <div class="col s12 m12 l8">
      <div class="card">
        <div class="title-sign-up-page center blue-grey darken-3">
          <%= t ".log_in" %>
        </div>
        <div class="card-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <%= render partial: 'shared/devise_message' %>

              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons md-36 prefix icon-account-material">email</i>&nbsp;
                  <%= f.email_field :email, id: "user_email_login", autocomplete: "on", class: "validate", placeholder: t(".email") %>
                  <span id="message-for-email-login"></span>
                </div>
              </div>

              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons md-36 prefix icon-account-material">lock_outline</i>&nbsp;
                  <%= f.password_field :password, id: "user_password_login", autocomplete: "on", class: "validate", placeholder: t(".password") %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                  <div class="row">
                    <div class="input-field col s12">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
              <% end %>

              <div class="row center">
                <div class="input-field col s12">
                  <button class="btn waves-effect waves-light" type="submit" name="action"><%= t ".log_in" %></button>
                </div>
              </div>

              <div class="row center">
                <div class="input-field col s12">
                  <%= t ".or" %> <%= link_to t(".forgot_password"), new_user_password_path %>
                </div>
              </div>
          <% end %>
          <div class="row center">
            <p><%= t ".dont_have_account" %>
              <%= link_to t(".sign_up"), new_user_registration_path %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
